{
  "hosting": {
    "public": "dist/dartplayer-web/",
    "404": "",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "en-US/index.html"
      },
      {
        "source": "/pt{,/**}",
        "destination": "pt-BR/index.html"
      },
      {
        "source": "/en{,/**}",
        "destination": "en-US/index.html"
      }
    ]
  }
}
